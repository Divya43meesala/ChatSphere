<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="16dp">

        <!-- Search Container -->
        <RelativeLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp">

            <!-- Search Bar -->
            <RelativeLayout
                android:id="@+id/search_bar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColorHint="#448EE4"
                    android:hint="Search something here"
                    android:background="@drawable/background_help"
                    android:paddingStart="16dp"
                    android:paddingEnd="40dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>

            <!-- Line break -->
            <View
                android:id="@+id/line_break"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/search_bar_container"
                android:layout_marginTop="16dp"/>

            <!-- "Need help from ChatSphere" text -->
            <TextView
                android:id="@+id/need_help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need help from ChatSphere"
                android:textSize="20sp"
                android:textColor="#448EE4"
                android:textStyle="bold"
                android:layout_below="@id/line_break"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

        <!-- Cards Container -->
        <LinearLayout
            android:id="@+id/cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/search_container"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- First Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <!-- Card Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:paddingTop="50dp"
                            android:paddingLeft="30dp"
                            android:src="@drawable/image1"/>

                        <!-- Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create Account"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Second Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <!-- Card Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image2"/>

                        <!-- Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Accounts"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Third Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <!-- Card Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image6"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"/>

                        <!-- Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Fourth Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <!-- Card Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="148dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image8"
                            android:paddingTop="20dp"
                            android:paddingLeft="10dp"/>

                        <!-- Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LogOut"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:padding="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <!-- Additional Features Heading -->
        <TextView
            android:id="@+id/additional_features_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Features"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cards_container"
            android:layout_marginTop="32dp"/>

        <!-- Features Container -->
        <LinearLayout
            android:id="@+id/features_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_below="@id/additional_features_heading"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF">

            <!-- Feature 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click On top right Corner Menu you will have logout,Help Options "
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/bullet_point"
                android:drawablePadding="8dp"
                android:padding="8dp"/>

            <!-- Feature 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After LogOut , app will redirects to the Login Page"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/bullet_point"
                android:drawablePadding="8dp"
                android:padding="8dp"/>

            <!-- Feature 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If we Press on Message we will have Delete message from you and Delete Message from Both sides"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/bullet_point"
                android:drawablePadding="8dp"
                android:padding="8dp"/>

            <!-- Feature 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help page provides Guidelines to use the App"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/bullet_point"
                android:drawablePadding="8dp"
                android:padding="8dp"/>

            <!-- Feature 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Press on the Account , that account will be temporarly deleted."
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/bullet_point"
                android:drawablePadding="8dp"
                android:padding="8dp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
